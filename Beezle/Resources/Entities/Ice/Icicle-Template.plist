<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>components</key>
	<dict>
		<key>breakable</key>
		<dict/>
		<key>brittle</key>
		<dict/>
		<key>disposable</key>
		<dict>
			<key>deleteEntityWhenDisposed</key>
			<true/>
		</dict>
		<key>physics</key>
		<dict>
			<key>body</key>
			<dict>
				<key>mass</key>
				<real>0</real>
			</dict>
			<key>shapes</key>
			<array>
				<dict>
					<key>type</key>
					<string>poly</string>
					<key>vertices</key>
					<array>
						<string>%physicsVertex1%</string>
						<string>%physicsVertex2%</string>
						<string>%physicsVertex3%</string>
						<string>%physicsVertex4%</string>
					</array>
					<key>elasticity</key>
					<real>0.8</real>
					<key>friction</key>
					<real>0.5</real>
					<key>isSensor</key>
					<true/>
					<key>layers</key>
					<integer>7</integer>
					<key>group</key>
					<string>LEVEL</string>
				</dict>
			</array>
		</dict>
		<key>render</key>
		<dict>
			<key>sprites</key>
			<array>
				<dict>
					<key>spriteSheetName</key>
					<string>C</string>
					<key>animationFile</key>
					<string>Icicle-Animations.plist</string>
					<key>anchorPoint</key>
					<string>{ 0.5, 1.0 }</string>
					<key>defaultIdleAnimations</key>
					<array>
						<string>Icicle-1</string>
						<string>Icicle-2</string>
						<string>Icicle-3</string>
					</array>
				</dict>
			</array>
		</dict>
		<key>shard</key>
		<dict>
			<key>piecesEntityType</key>
			<string>ICICLE-PIECE</string>
			<key>piecesCount</key>
			<integer>5</integer>
			<key>piecesSpawnType</key>
            <string>SHARD_PIECES_SPAWN_FADEOUT</string>
		</dict>
		<key>sound</key>
        <dict>
            <key>defaultDestroySound</key>
            <string>GlassSmall</string>
        </dict>
		<key>transform</key>
		<dict>
			<key>scale</key>
			<string>%transformScale%</string>
		</dict>
	</dict>
</dict>
</plist>
